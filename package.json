{
  "name": "hims-dev",
  "productName": "hims-dev",
  "version": "0.2.290-beta", 
  "description": "HIMS Development Version",
  "author": "Veridata",
  "main": "public/electron.js",
  "build": {
    "appId": "ph.com.veridata.hims-dev",
    "files": [
      "build/*",
      "build/**/*",
      "public/*",
      "public/**/*"
    ],
    "mac": {
      "icon": "public/hims-dev.png"
    },
    "win": {
      "icon": "public/hims-dev.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "veridata-hims",
        "repo": "hims-dev",
        "releaseType": "prerelease",
        "channel": "latest"
      }
    ]
  },
  "homepage": "./",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "react-start": "env $(cat .env | xargs) react-scripts start",
    "react-build": "env $(cat .env | xargs) react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build -w",
    "buildmac": "yarn react-build && yarn electron-build -m",
    "build:dev": "yarn react-build && electron-builder -c.extraMetadata.version=${CURRENT_VERSION} --win --config config/dev.json",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "publish": "yarn react-build && electron-builder --win --x64 --ia32 -p always",
    "publish-only": "electron-builder --win --x64 --ia32 -p always"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint:eslint:js --fix ",
      "git add --force "
    ],
    "*.{md,json}": [
      "prettier --write ",
      "git add --force "
    ],
    "*.{ts,tsx}": [
      "yarn lint:eslint:ts --fix ",
      "yarn lint:ts --fix ",
      "git add --force "
    ]
  },
  "husky": {
    "hooks": {}
  },
  "workspaces": [
    "@hims/api",
    "@hims/core"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-regular-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "cross-env": "^5.2.1",
    "electron-is-dev": "^1.1.0",
    "electron-pdf-window": "^1.0.12",
    "electron-updater": "^4.2.0",
    "react": "^16.9.0",
    "react-avatar-edit": "^0.8.3",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.2.0",
    "typescript": "3.6.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "electron": "^6.0.9",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0",
    "yarn": "^1.17.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
